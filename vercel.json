{
  "version": 2,
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "framework": "vite",
  "env": {
    "DATABASE_URL": {
      "description": "MySQL connection string (TiDB Serverless recommended)",
      "required": true
    },
    "VITE_APP_ID": {
      "description": "Manus OAuth application ID",
      "required": true
    },
    "JWT_SECRET": {
      "description": "JWT secret key (minimum 32 characters)",
      "required": true
    },
    "OWNER_OPEN_ID": {
      "description": "Owner's Manus OpenID",
      "required": true
    },
    "OWNER_NAME": {
      "description": "Owner's name",
      "required": true
    },
    "OAUTH_SERVER_URL": {
      "description": "Manus OAuth server URL",
      "default": "https://api.manus.im",
      "required": true
    },
    "VITE_OAUTH_PORTAL_URL": {
      "description": "Manus OAuth portal URL",
      "default": "https://manus.im/login",
      "required": true
    },
    "BUILT_IN_FORGE_API_URL": {
      "description": "Manus built-in APIs URL",
      "default": "https://api.manus.im",
      "required": true
    },
    "BUILT_IN_FORGE_API_KEY": {
      "description": "Manus built-in APIs key (server-side)",
      "required": true
    },
    "VITE_FRONTEND_FORGE_API_URL": {
      "description": "Manus built-in APIs URL (frontend)",
      "default": "https://api.manus.im",
      "required": true
    },
    "VITE_FRONTEND_FORGE_API_KEY": {
      "description": "Manus built-in APIs key (frontend)",
      "required": true
    },
    "VITE_ANALYTICS_ENDPOINT": {
      "description": "Analytics endpoint (optional)",
      "required": false
    },
    "VITE_ANALYTICS_WEBSITE_ID": {
      "description": "Analytics website ID (optional)",
      "required": false
    }
  },
  "functions": {
    "server/_core/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "server/_core/index.ts"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
